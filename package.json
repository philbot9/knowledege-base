{
  "name": "knowledge-base",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "build": "npm-run-all --parallel build:*",
    "build:backend": "tsc",
    "build:frontend": "gulp",
    "test": "jest --coverage",
    "dev": "npm-run-all --parallel watch:*",
    "watch:build-backend": "tsc --watch",
    "watch:build-frontend": "gulp --watch",
    "watch:start": "nodemon --watch dist --exec 'npm start'",
    "watch:test": "jest --watch",
    "clean": "rm -rf dist/"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cookie-parser": "~1.4.4",
    "cookie-session": "^1.4.0",
    "debug": "~2.6.9",
    "ejs": "~2.6.1",
    "express": "~4.16.1",
    "helmet": "^4.4.1",
    "http-errors": "^1.6.3",
    "morgan": "~1.9.1",
    "nedb-promises": "^4.1.2",
    "ramda": "^0.27.1",
    "xid": "0.0.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cookie-session": "^2.0.42",
    "@types/express": "^4.17.11",
    "@types/helmet": "^4.0.0",
    "@types/http-errors": "^1.8.0",
    "@types/jest": "^26.0.22",
    "@types/morgan": "^1.9.2",
    "@types/ramda": "^0.27.40",
    "gulp": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-uglify": "^3.0.2",
    "gulp-uglifycss": "^1.1.0",
    "jest": "^26.6.3",
    "jest-mock-extended": "^1.0.13",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  }
}
